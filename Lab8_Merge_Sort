#include <stdio.h>
#include <stdlib.h>
void merge(int arr[], int l, int m, int r)
{
    int i, j, k;
    int n1 = m - l + 1;
    int n2 = r - m;
 
    int Larr[n1], Rarr[n2];
 
    for (i = 0; i < n1; i++)
        Larr[i] = arr[l + i];
    for (j = 0; j < n2; j++)
        Rarr[j] = arr[m + 1 + j];
 
    i = 0;
    j = 0;
    k = l;
    while (i < n1 && j < n2) {
        if (Larr[i] <= Rarr[j]) {
            arr[k] = Larr[i];
            i++;
        }
        else {
            arr[k] = Rarr[j];
            j++;
        }
        k++;
    }
 
    if(j==n2){
        while(i != n1){
            arr[k] = Larr[i];
            i++;
            k++;
        }
    }else{
        while(j != n2){
            arr[k] = Rarr[j];
            j++;
            k++;
        }
    }
}
 
void mergeSort(int arr[], int l, int r)
{
    if (l < r) {
        int m = l + (r - l) / 2;
 
        mergeSort(arr, l, m);
        mergeSort(arr, m + 1, r);
 
        merge(arr, l, m, r);
    }
}

void display(int A[], int size)
{
    int i;
    for (i = 0; i < size; i++)
        printf("%d ", A[i]);
    printf("\n");
}
 
int main()
{
    int arr[] = { 12, 11, 13, 5, 6, 7 };
    int n = sizeof(arr) / sizeof(arr[0]);
 
    printf("Given array is \n");
    display(arr, n);
 
    mergeSort(arr, 0, n - 1);
 
    printf("\nSorted array is \n");
    display(arr, n);
    return 0;
}
